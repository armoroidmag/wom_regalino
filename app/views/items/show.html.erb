<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        アイテム詳細
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= attachment_image_tag @item, :image %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= @item.item_name %></p>
              </div>
              <div class=media-content is-light">
              <% if current_user.already_liked?(@item) %>
            <%= link_to item_likes_path(@item), method: :delete do %>
              <i class="fas fa-heart size"></i>
            <% end %>
            <%= @item.likes.count %>
          <% else %>
            <%= link_to item_likes_path(@item), method: :post do %>
              <i class="far fa-heart size"></i>
            <% end %>
            <%= @item.likes.count %>
          <% end %>
            </div>
            <div class="content is-3">
              <table class="table is-narrow">
                <tr>
                  <th>商品</th>
                </tr>
                <tr>
                  <td><%= simple_format @item.content %></td>
                </tr>
              </table>
              <% if @item.user.id == current_user.id %>
                <%= link_to "編集画面へ", edit_item_path(@item), class: "button is-success" %>
                <%= link_to "削除する", item_path(@item), method: :delete, class: "button is-danger" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="card-content">
            <div class="content average-score">
              <div class="star-rating mb-2">
                <div class="star-rating-front" style="width <%= @item.review_score_percentage %>">★★★★★</div>
                <div class="star-rating-back">★★★★★</div>
              </div>
              <div class="average-score-display ml-3 pt-2">
                <%= @item.avg_score %>点（<%= @item.reviews.count %>件のレビュー）
              </div>
            </div>
          </div>
        </div>
        <%= render 'reviews/form', review: @review, item: @item %>
      </div>
    </div>
  </div>

      <div class="column is-4">
        <article class="panel is-link">
          <p class="panel-heading">
          </p>
          <div class="panel-block">
            <p class="control">
              <%= @item.user.profile %>
            </p>
          </div>
          <%= link_to user_path(@item.user), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            <%= @item.user.username %> さんのページへ
          <% end %>
        </article>
      </div>
      

    <div class="colums">
      <div class="colum is-one-fifth">
        <div class="display is-inline-block">
          <% @reviews.each do |review| %>
            <div class="image is-48x48">
              <%= attachment_image_tag review.user, :profile_image, fallback: "no_image.png", class: "profile_image" %>
            </div>
          </div>
        </div>
        <div class="colum">
          <div class="balloon1">
            <div class="display is-inline-block">
              <td has-text-info><%= review.user.username %>さん</td>
              <td>ランク<%= review.score %></td>
              <td>コメント：<%= review.content %></td>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
</section>
