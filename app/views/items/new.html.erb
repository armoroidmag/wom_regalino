<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        アイテムを作成する
      </h1>
    </div>
  </div>
</section>

<% if @item.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@item.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <%= form_for(@item, url: items_path, remote: true) do |f| %>
        
          <div class="field">
            <%= f.label :item_name, "アイテム名", class: "label" %>
            <%= f.text_field :item_name, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :tag_list, "タグ", class: "label" %>
            <span class="Required Non-required">任意
            ※スペースかカンマで区切ってください</span>
            <br/>
            <%= f.text_field :tag_list, value: @item.tag_list.join(','), class: "input" %>
          </div>

          <div class="field">
            <%= f.label :location, "エリア", class: "label" %>
            <%= f.text_field :location, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :price, "価格帯", class: "label" %>
            <%= f.text_field :price, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :content, "詳細内容", class: "label" %>
            <%= f.text_area :content, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :best_before_date, "日持ち", class: "label" %>
            <%= f.text_field :best_before_date, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :image, "イメージ画像", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>

          <%= f.hidden_field :user_id, :value => current_user.id %>
          <%= f.submit '投稿する', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>