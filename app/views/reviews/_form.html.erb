<button type="button is-success" id="button">この商品のレビューをかく</button>
<div class="modal" id="page-modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title is-pink">レビューする</p>
      <button class="delete" aria-label="close" id="hide"></button>
    </header>
    <section class="modal-card-body">
      <div class="rating-box mt-3">
      <%= form_for([@item,@score,@review], url: item_reviews_path(@item), remote: true) do |f| %>
    <div class="main-rating">
      <div class="ratings mb-3">
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
      </div>
      <div class="ml-3 rating-value-display"><span id="rating-value-display">0</span>/5
      </div>
    </div>
    <%= f.hidden_field :item_id, value: @item.id %>
    <%= f.hidden_field :score, id: "rating-value" %>
    <%= f.text_area :content, class: "textarea" %>
    <%= f.submit "レビュー登録", class: "button mt-3" %>
  <% end %>
</div>
    </section>
    <footer class="modal-content-foot">
      <button class="button is-success">保存する</button>
    </footer>
  </div>
</div>

<%= javascript_pack_tag "review.js",'data-turbolinks-track': 'reload' %>
<%= javascript_pack_tag "modal.js",'data-turbolinks-track': 'reload' %>
