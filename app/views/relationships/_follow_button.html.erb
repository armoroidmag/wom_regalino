<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= form_for(current_user.relationships.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <button class="button is-success is-rounded"><span class="icon is-rounded"><i class="fas fa-meh"></i></span><span>フォローをやめる</span></button>
    <% end %>
  <% else %>
    <%= form_for(current_user.relationships.build) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <button class="button is-link is-rounded"><span class="icon is-rounded"><i class="far fa-grin"></i></span><span>フォローする</span></button>
    <% end %>
  <% end %>
<% end %>